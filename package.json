  "homepage": "https://github.com/matthew-e-brown/resume#readme",
  "license": "MIT",
  "version": "3.0.0",
  "scripts": {
    "build": "npm run build:clean && npm run build:html && npm run build:scss && npm run build:mini",
    "build:html": "micro-ssg -t tsconfig.json -f",
    "build:scss": "sass src/styles:dist -I node_modules -s compressed --no-source-map",
    "build:mini": "html-minifier --input-dir dist --output-dir dist --file-ext html --case-sensitive --collapse-whitespace",
    "build:clean": "rm -rf dist || rm -rf dist/**/*",
    "deploy": "npm run build && gh-pages -d dist",
    "watch": "concurrently 'npm:watch:nodemon' 'npm:watch:server'",
    "watch:nodemon": "nodemon --watch src -e js,ts,hbs,handlebars,yml,yaml,md,scss,css --exec npm run build",
    "watch:server": "http-server dist"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/pro-regular-svg-icons": "^6.1.1",
    "@fortawesome/pro-solid-svg-icons": "^6.1.1",
    "@types/jsdom": "^16.2.14",
    "@types/marked": "^4.0.2",
    "@types/node": "^17.0.33",
    "concurrently": "^7.1.0",
    "gh-pages": "^3.1.0",
    "highlight.js": "^11.1.0",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.0",
    "jsdom": "^19.0.0",
    "marked": "^4.0.12",
    "micro-ssg": "^1.2.0",
    "nodemon": "^2.0.16",
    "normalize.css": "^8.0.1",
    "sass": "^1.32.13",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
