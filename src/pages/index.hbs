<!DOCTYPE html>
<html lang="en">
<head>
  {{> head-metadata }}
  <link rel="stylesheet" href="./resume.css">
  <title>{{ _shared.name }} | Resume</title>
</head>
<body>

  <div id="page">
    {{!-- Include name/title and contact-grid --}}
    {{> page-header }}

    {{#each sections }}
      <section id="{{ id-section }}">

        <h2 id="{{ id-heading }}">{{{ markdown-inline header }}}</h2>

        {{#each subsections }}
          <div class="subsection {{#unless header}}no-header{{/unless}}">
            {{!-- The left-hand block --}}
            {{#if header}}<h3>{{{ markdown-inline header }}}</h3>{{/if}}

            {{!-- The right-hand block --}}
            <div>
              {{#each entries}}
                {{#if title}} <h4>{{{ title }}}</h4> {{/if}}
                <div class="body-text">{{{ markdown-block body }}}</div>
              {{/each}}
            </div>
          </div>
        {{/each}}
        {{!-- End subsections --}}

      </section>
    {{/each}}
  </div>

</body>
</html>
